THIS_FILE=`which "$0" 2>/dev/null`
[ $? -gt 0 -a -f "$0" ] && THIS_FILE="$0"
CP="$(pwd)/$THIS_FILE"
DIR=$(cd "$(dirname "$THIS_FILE")"; pwd)
FELIX_HOME=$(cd "$DIR/.."; pwd)

# Cleanup paths for Cygwin
case "$platform" in
CYGWIN*)
	CP=`cygpath --windows --mixed --path "$CP"`
	;;
Darwin)
	if [ -e /System/Library/Frameworks/JavaVM.framework ]
	then
		java_args='
			-Dcom.apple.mrj.application.apple.menu.about.name=Felix
			-Dcom.apple.mrj.application.growbox.intrudes=false
			-Dapple.laf.useScreenMenuBar=true
			-Xdock:name=Felix
			-Xdock:icon="$DIR/felix.png"
			-Dfile.encoding=UTF-8
		'
	fi
	;;
esac

CLASSPATH="$CP"
export CLASSPATH

java=java
if [ -n "$JAVA_HOME" ]
then
	java="$JAVA_HOME/bin/java"
fi

cd "$FELIX_HOME"
exec "$java" -cp "$CLASSPATH" -Dfelix.home="$FELIX_HOME" -Dfelix.config.properties="file:$FELIX_HOME/conf/config.properties" -Djava.util.logging.config.file="$FELIX_HOME/conf/java.util.logging.properties" $java_args @MAINCLASS@ "$@"
exit 1

